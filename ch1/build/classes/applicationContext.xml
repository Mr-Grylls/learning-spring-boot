<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    	http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- 	将指定类ITestDaoImpl配置给spring，让spring创建其实例	 -->
	<bean id="testDao" class="com.dao.ITestDaoImpl"/>
	<!-- 	使用构造方法注入 	-->
	<bean id="testService" class="com.service.ITestServiceImpl">
		<constructor-arg index="0" ref="testDao"/>
	</bean>
	<!--  	使用setter方法注入		 -->
	<bean id="testServiceSet" class="com.service.TestServiceImpl">
		<property name="itestDao" ref="testDao"/>
	</bean>
</beans>