<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    	http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--	 定义目标对象	 -->
	<bean id="testDao" class="com.dynamic.jdk.TestDaoImpl"/>
	<!-- 	创建一个切面	 -->
	<bean id="myAspect" class="com.spring.proxyfactorybean.MyAspect"/>
	<!--	 使用spring代理工厂定义一个testDaoProxy的代理对象	 -->
	<bean id="testDaoProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
		<!--	 指定代理实现的接口	 -->
		<property name="proxyInterfaces" value="com.dynamic.jdk.TestDao"/>
		<!-- 	指定目标对象	 -->
		<property name="target" ref="testDao"/>
		<!--	 指定切面，织入环绕通知	 -->
		<property name="interceptorNames" value="myAspect"/>
		<!--	 指定代理方式，true指定cglib动态代理，false默认jdk动态代理	 -->
		<property name="proxyTargetClass" value="true"></property>
	</bean>
	
</beans>