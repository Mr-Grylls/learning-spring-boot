<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xust.mapper.MenuRoleMapper" >
    <resultMap id="BaseResultMap" type="com.xust.model.MenuRole">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="rid" property="rid" jdbcType="INTEGER"/>
        <result column="mid" property="mid" jdbcType="INTEGER"/>
    </resultMap>
    <sql id="Base_Column_List">
        id,mid,rid
    </sql>

    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from menu_role where rid = #{rid}
    </delete>
    
    <delete id="deleteByRid">
        delete from menu_role where rid = #{rid}
    </delete>

    <insert id="insert" parameterType="com.xust.model.MenuRole">
        insert into menu_role (id,mid,rid) values(#{id},#{mid},#{rid})
    </insert>

    <insert id="insertSelective" parameterType="com.xust.model.MenuRole">
        insert into menu_role
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                id,
            </if>
            <if test="mid != null" >
                mid,
            </if>
            <if test="rid != null" >
                rid,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=INTEGER},
            </if>
            <if test="mid != null" >
                #{mid,jdbcType=INTEGER},
            </if>
            <if test="rid != null" >
                #{rid,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <insert id="insertRecord" >
        insert into menu_role (mid,rid) values 
        <foreach collection="mids" separator="," item="mid">
            (#{mid},#{rid})
        </foreach>
    </insert>
    
    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select 
          <include refid="Base_Column_List" />
        from menu_role where id = #{id}
    </select>

    <update id="updateById" parameterType="com.xust.model.MenuRole">
        update menu_role
        set mid = #{mid},rid = #{rid}
        where id = #{id}
    </update>

    <update id="updateByIdSelective" parameterType="com.xust.model.MenuRole">
        update menu_role
        <set >
            <if test="mid != null" >
                mid = #{mid,jdbcType=INTEGER},
            </if>
            <if test="rid != null" >
                rid = #{rid,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    
</mapper>