<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xust.mapper.MsgContentMapper" >
    <resultMap id="BaseResultMap" type="com.xust.model.MsgContent">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="message" property="message" jdbcType="VARCHAR"/>
        <result column="createDate" property="createDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">id,title,message,createDate</sql>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from msgcontent
        where id = #{id};
    </select>

    <insert id="insert" parameterType="com.xust.model.MsgContent">
        insert  into msgcontent(id,title,message,createDate)
        values (#{id},#{title},#{message},#{createDate})
    </insert>

    <insert id="insertSelective" parameterType="com.xust.model.MsgContent">
        insert  into msgcontent
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
               id,
            </if>
            <if test="title != null" >
                title,
            </if>
            <if test="message != null" >
                message,
            </if>
            <if test="createDate != null" >
                createDate,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=INTEGER},
            </if>
            <if test="title != null" >
                #{title},
            </if>
            <if test="message != null" >
                #{message},
            </if>
            <if test="createDate != null" >
                #{createDate},
            </if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.xust.model.MsgContent">
        update msgcontent
        set name = #{name}
        where id = #{id}
    </update>

    <update id="updateByIdSelective" parameterType="com.xust.model.MsgContent">
        update msgcontent
        <set>
            <if test="title != null">
                name = #{title},
            </if>
            <if test="message != null">
                name = #{message},
            </if>
            <if test="createDate != null">
                name = #{createDate},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteById" parameterType="java.lang.Integer">
        delete from msgcontent where id = #{id}
    </delete>

</mapper>